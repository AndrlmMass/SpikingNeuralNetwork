{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,  // Ensure you can debug external files
            "cwd": "${workspaceFolder}"  // Set working directory to your project root
        }
    ]
}
